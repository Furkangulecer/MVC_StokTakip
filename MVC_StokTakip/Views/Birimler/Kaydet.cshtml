@model MVC_StokTakip.Models.Entity.Birimler
@{
    ViewBag.Title = "Ekle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Birim Kaydetme Sayfası</h2>
<div class="container">
    @using (Html.BeginForm("Kaydet", "Birimler", FormMethod.Post))
    {
        <div class="form-group">
            @Html.HiddenFor(x=>x.ID)
            @Html.LabelFor(x => x.Birim)

            @Html.TextBoxFor(x => x.Birim, new { @class = "form-control" })

        </div>
        <div class="form-group">
            @Html.LabelFor(x => x.Aciklama)

            @Html.TextAreaFor(x => x.Aciklama, new { @class = "form-control" })

        </div>
        <div class="form-group">
            <button class="btn btn-success">Kaydet</button>

        </div>

    }

</div>
